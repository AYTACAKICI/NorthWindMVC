@using YesilEvMVC.UI.Models.VMs
@model CustomerOrderFilterVMs
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var data = (List<YesilEvMVC.UI.Models.VMs.Customer_OrderVMs>)TempData["Data"];
     
}

<div class="modal-body" style="height:auto; overflow-y:auto;">
    @using (Html.BeginForm("Index", "Order", FormMethod.Post))
    {
        <table style="width:100%" cellpadding="10">
            <tr>
                <td>
                    <div style="display: inline; ">
                        <label style=" float:left;margin-left:200px; margin-right:20px;">Firma: </label>
                        @Html.TextBoxFor(m => m.CompanyName, new { @style = "float:left;margin-right:10px;margin-top:-5px;" })
                        <label style=" float:left; margin-right:20px;">Personel: </label>
                        @Html.TextBoxFor(m => m.EmplooyeName, new { @style = "float:left;margin-right:10px;margin-top:-5px;" })
                        <label style=" float:left; margin-right:20px;">Kargo: </label>
                        @Html.TextBoxFor(m => m.ShipperName, new { @style = "float:left;margin-right:10px;margin-top:-5px;" })

                        <input type="submit" name="name" value="Filtrele" class="btn btn-primary form-control" />

                        <a href="/Order/NewOrder" class="btn btn-success form-control">Yeni Satış Ekle</a>
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
<table id="tbl4" class="table table-bordered">
    <thead>
        <tr>
            <th>Şirket</th>
            <th>Toplam Ürün Adeti</th>
            <th>Toplam Satış Tutarı </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in data)
        {
            <tr>
                <td>@item.Customer</td>
                <td>@item.TotalOrderQuantity</td>
                <td>@item.TotalOrderAmount</td>
            </tr>
        }
    </tbody>
</table>
