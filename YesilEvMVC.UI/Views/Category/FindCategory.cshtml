@model YesilEvMVC.UI.Models.Entity.Categories
@{
    ViewBag.Title = "FindCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kategori güncelleme Ekranı</h2>

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryID)
        @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control", @readonly = "readonly" })       
        <br />
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        <br />
        <input type="submit" class="btn btn-warning" name="name" value="Kategori güncelle" />
    </div>
    
}


