@using YesilEvMVC.UI.Models.Entity
@model List<Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Category", FormMethod.Get)) 
{
    <p>
        Aranacak Müşteri Adı : @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklama</th>
        <th><a href="/Category/NewCategory" class="btn btn-primary">Yeni Kategori Ekle</a>  </th>
        
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                @Html.ActionLink("Sil", "DeleteCategory",new {id=item.CategoryID},new {@class ="btn btn-danger", onclick ="return confirm('Silmek istediğinize emin misiniz?')"})
                <a href="/Category/FindCategory/@item.CategoryID" class="btn btn-success ">Güncelle</a>
                </td>
            </tr>
            
         }
    </tbody>
</table>
<a href="/Category/NewCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

