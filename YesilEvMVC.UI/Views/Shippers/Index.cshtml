@using YesilEvMVC.UI.Models.Entity
@model List<Shippers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>Shipper ID</th>
            <th>Firma Adı</th>
            <th>Telefon No</th>
            <th>  <a href="/Shippers/NewShippers" class="btn btn-primary">Yeni Kargo Firması Ekle</a> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShipperID</td>
                <td>@item.CompanyName</td>
                <td>@item.Phone</td>
                <td>
                    @Html.ActionLink("Sil", "DeleteShippers", new { id = item.ShipperID }, new { @class = "btn btn-danger", onclick = "return comfirm('Silmek istediğine emin misin?')" })
                    @Html.ActionLink("Güncelle", "FindShippers", new { id = item.ShipperID }, new { @class = "btn btn-success" })
                </td>
            </tr>

        }
    </tbody>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
